<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="text-center">
        <strong><%= @store.name %></strong>
      </h4>
    </div>
    <div class="col-lg-8 offset-2">
      <hr class="hr">
      <%= form_with model: @store, url: store_store_path(@store) do |f| %>
      <table class="table table-borderless offset-2">
        <tbody>
          <tr>
            <td>店舗ID</td>
            <td><%= @store.id %></td>
          </tr>
          <tr>
            <td>店舗写真</td>
            <td><%= f.file_field :image, accept: "image/*", class:"w-100" %></td>
          </tr>
          <tr>
            <td>店舗名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: 40 %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
        </tbody>
      </table>
      <div class="col-lg-6 offset-3">
        <div class="action">
          <%= f.submit "変更を保存", class: 'btn btn-block btn-success mt-5' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>