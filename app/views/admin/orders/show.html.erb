<div class="container">
  <div class="row">
    <div class="col-lg-12 mb-5">
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-4">
          <h5>注文日</h5>
        </div>
        <div class="col-lg-4">
          <h5><%= @order.created_at.strftime('%Y/%m/%d') %></h5>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-4">
          <h5>購入者</h5>
        </div>
        <div class="col-lg-4">
          <h5><%= @order.customer.last_name %><%= @order.customer.first_name %></h5>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-4">
          <h5>支払方法</h5>
        </div>
        <div class="col-lg-4">
          <h5><%= @order.payment_method_i18n %></h5>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-4">
          <h5>商品合計</h5>
        </div>
        <div class="col-lg-4">
          <h5>¥<%= @order.subtotal %></h5>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-4">
          <h5>手数料</h5>
        </div>
        <div class="col-lg-4">
          <h5>¥<%= @order.fee %></h5>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-4">
          <h4>お支払い金額</h4>
        </div>
        <div class="col-lg-4">
          <h4>¥<%= @order.payment_amount %></h4>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="row border-bottom border-white">
        <div class="col-lg-3">
          <h6>商品名</h6>
        </div>
        <div class="col-lg-3">
          <h6>単価(税込)</h6>
        </div>
        <div class="col-lg-3">
          <h6>数量</h6>
        </div>
        <div class="col-lg-3">
          <h6>小計</h6>
        </div>
      </div>
      <% @order.order_details.each do |order_detail| %>
      <div class="row mt-3 border-bottom border-white">
        <div class="col-lg-3">
          <h5><%= order_detail.item.name %></h5>
        </div>
        <div class="col-lg-3">
          <h5>¥<%= order_detail.item.with_tax_price %></h5>
        </div>
        <div class="col-lg-3">
          <h5><%= order_detail.quantity %></h5>
        </div>
        <div class="col-lg-3">
          <h5>¥<%= order_detail.item.with_tax_price * order_detail.quantity %></h5>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>