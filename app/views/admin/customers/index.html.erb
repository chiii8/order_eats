<div class="container">
  <div class="row">
    <div class="col-lg-2 offset-5 mb-5">
      <h4><strong>会員一覧</strong></h4>
    </div>
    <div class="offset-2 col-lg-8">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <td>会員ID</td>
            <td>氏名</td>
            <td>メールアドレス</td>
            <td>ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: 'text-dark' do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == true %>
                <p class="text-success"><strong><%= "有効" %></strong></p>
              <% else %>
                <p class="text-danger"><strong><%= "退会" %></strong></p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @customers %>