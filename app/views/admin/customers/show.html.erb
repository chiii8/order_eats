<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
    <div class="col-md-6 offset-3 mt-5">
      <table class="table table-borderless" bgcolor="#e6e6e6">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_active == true %>
                <p class="text-success"><strong><%= "有効" %></strong></p>
              <% else %>
                <p class="text-danger"><strong><%= "退会" %></strong></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>