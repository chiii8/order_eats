<div class="container">
  <div class="row">
    <div class="col text-center">
      <h3>店舗一覧</h3>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-1 offset-3">
      <h5>店舗ID</h5>
    </div>
    <div class="col-lg-2">
      <h5>店舗名</h5>
    </div>
    <div class="col-lg-2">
      <h5>メールアドレス</h5>
    </div>
    <div class="col-lg-2">
      <h5>電話番号</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7 offset-3">
      <div class="border-line">
        <hr class="hr1">
      </div>
    </div>
  </div>
  <% @stores.each do |store| %>
  <div class="row">
    <div class="col-lg-1 offset-3">
      <%= store.id %>
    </div>
    <div class="col-lg-2">
      <%= link_to admin_store_path(store.id), class: 'text-dark' do %>
        <%= store.name %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= store.email %>
    </div>
    <div class="col-lg-2">
      <%= store.telephone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7 offset-3">
      <div class="border-line">
        <hr class="hr1">
      </div>
    </div>
  </div>
  <% end %>
  <div class="row", style="text-align: center;">
    <div class="col-6 offset-5">
      <%= paginate @stores %>
    </div>
  </div>
</div>