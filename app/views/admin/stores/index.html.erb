<div class="container">
  <div class="row">
    <div class="col-lg-2 offset-5">
      <h4><strong>店舗一覧</strong></h4>
    </div>
    <div class="col-lg-8 offset-2 mt-5">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <td>店舗ID</td>
            <td>店舗名</td>
            <td>メールアドレス</td>
            <td>電話番号</td>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
          <tr>
            <td><%= store.id %></td>
            <td>
              <%= link_to admin_store_path(store.id), class: 'text-dark' do %>
                <%= store.name %>
              <% end %>
            </td>
            <td><%= store.email %></td>
            <td><%= store.telephone_number %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @stores %>