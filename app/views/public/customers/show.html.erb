<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>マイページ</h3>
      <div class="rounded-circle">
        <%= image_tag @customer.get_profile_image(150, 150), class: 'mt-md-5 mb-0' %>
      </div>
    </div>
    <div class="col-md-8">
      <h3 class="mb-md-5"><strong><%= @customer.full_name %></strong></h3>
      <div class="row">
        <div class="col-md-6">
          <%= link_to favorites_customer_path(@customer), class: 'text-secondary' do %>
            <h4>お気に入り</h4>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mt-md-3">
          <%= link_to confirmation_path(@customer), class: 'text-secondary' do %>
             <h4>個人情報</h4>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mt-md-3">
          <%= link_to orders_path(@customer), class: 'text-secondary' do %>
             <h4>注文一覧</h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>