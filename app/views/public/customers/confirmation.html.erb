<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= link_to "<<", mypage_path(current_customer), class: 'text-dark' %>
    </div>
    <div class="col-md-8 text-center mt-md-4">
      <h4>アカウント情報</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-2 offset-md-4 mt-md-5 col-5">
      <h5>氏名</h5>
    </div>
    <div class="col-md-3 mt-md-5 col-7">
      <h5><%= @customer.full_name %></h5>
    </div>
  </div>
  <div class="row mt-md-3">
    <div class="col-md-2 offset-md-4 col-5">
      <h5>フリガナ</h5>
    </div>
    <div class="col-md-3 col-7">
      <h5><%= @customer.full_name_kana %></h5>
    </div>
  </div>
  <div class="row mt-md-3">
    <div class="col-md-2 offset-md-4 col-5">
      <h5>メールアドレス</h5>
    </div>
    <div class="col-md-3 col-7">
      <h5><%= @customer.email %></h5>
    </div>
  </div>
  <div class="row mt-md-3">
    <div class="col-md-2 offset-md-4 col-5">
      <h5>電話番号</h5>
    </div>
    <div class="col-md-3 col-7">
      <h5><%= @customer.telephone_number %></h5>
    </div>
  </div>
  <div class="row mt-md-3 mb-md-4">
    <div class="col-md-2 offset-md-4 col-5">
      <h5>性別</h5>
    </div>
    <div class="col-md-3 col-7">
      <h5><%= @customer.gender_i18n %></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <hr class="hr1">
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-4 mt-md-5 mt-3">
      <%= link_to "個人情報編集", infomation_path(@customer), class: 'btn btn-success btn-block' %>
    </div>
  </div>
</div>