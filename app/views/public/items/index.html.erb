<div class="container">
  <div class="row">
    <div class="col-lg-12">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="category-header">
        <nav>
          <ul style="list-style: none;">
            <% @item_categories.each do |item_category| %>
              <li><h5><%= link_to item_category.name, store_items_path(item_category_id: item_category.id), class: 'text-dark' %></h5></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col text-center">
      <h4><strong><%= @store.name %></strong></h4>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-lg-12">
      <% if params[:item_category_id].present? %>
        <h2><%= "#{ItemCategory.find(params[:item_category_id]).name}" %></h2>
      <% end %>
    </div>
    <% @items.each do |item| %>
      <div class="col-lg-2">
        <%= link_to store_item_path(@store, item) do %>
          <%= image_tag item.get_image(150, 120), class: 'item-img'  %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <p><strong><%= item.name %></strong></p>
        <p><%= item.introduction %></p>
        <p>¥<%= item.price %></p>
        <p>
          <% if item.is_active %>
            <span class="text-success"><strong>販売中</strong></span>
          <% else %>
            <span class="text-danger"><strong>販売停止中</strong></span>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @items %>