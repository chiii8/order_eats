<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= render 'item_header' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2 mb-5">
      <h4><strong><%= @store.name %></strong></h4>
    </div>
  </div>
  <div class="row mb-5">
    <% @items.each do |item| %>
      <% if params[:item_category_id].present? %>
        <h2><%= "#{ItemCategory.find(params[:item_category_id]).name}" %></h2>
      <% end %>
      <div class="col-lg-2">
        <%= link_to store_item_path(@store, item) do %>
          <%= image_tag item.get_image(150, 120) %>
        <% end %>
      </div>
      <div class="col-lg-2">
        <p><strong><%= item.name %></strong></p>
        <p><%= item.introduction %></p>
        <p>¥<%= item.price %></p>
        <p>
          <% if item.is_active %>
            <span class="text-success"><strong>販売中</strong></span>
          <% else %>
            <span class="text-danger"><strong>販売停止中</strong></span>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @items %>