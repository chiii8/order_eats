<div class="container">
  <div class="row mt-5">
    <div class="col text-center">
      <h4>新規会員登録</h4>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>名前</h5>
      </div>
      <div class="col-lg-5">
        <div class="row">
          <div class="col-6">
            <%= f.text_field :last_name, class: 'form-control', placeholder: "姓" %>
          </div>
          <div class="col-6">
            <%= f.text_field :first_name, class: 'form-control', placeholder: "名" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>フリガナ</h5>
      </div>
      <div class="col-lg-5">
        <div class="row">
          <div class="col-6">
            <%= f.text_field :last_name_kana, class: 'form-control', placeholder: "セイ" %>
          </div>
          <div class="col-6">
            <%= f.text_field :first_name_kana, class: 'form-control', placeholder: "メイ" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>電話番号</h5>
      </div>
      <div class="col-lg-5">
        <%= f.text_field :telephone_number, class: 'form-control', size: 30, :placeholder => "00000000000" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>メールアドレス</h5>
      </div>
      <div class="col-lg-5">
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", size: 30, :placeholder => "aaa@gmail.com" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>性別</h5>
      </div>
      <div class="col-lg-5">
        <%= f.radio_button :gender, Customer.genders.key(0) %>
        <%= f.label :gender_male, Customer.genders_i18n[:male], class: 'mr-3' %>
        <%= f.radio_button :gender, Customer.genders.key(1) %>
        <%= f.label :gender_female, Customer.genders_i18n[:female], class: 'mr-3' %>
        <%= f.radio_button :gender, Customer.genders.key(2) %>
        <%= f.label :gender_no_answer, Customer.genders_i18n[:no_answer] %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>パスワード</h5>
      </div>
      <div class="col-lg-3">
        <%= f.password_field :password, class: 'form-control', size: 30, :placeholder => "パスワード(６文字以上)" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 offset-lg-3">
        <h5>パスワード(確認用)</h5>
      </div>
      <div class="col-lg-3">
        <%= f.password_field :password_confimation, class: 'form-control', size: 30, :placeholder => "パスワード(確認用)" %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-lg-8 offset-lg-2">
        <div class="border-line">
          <hr class="hr1">
        </div>
      </div>
    </div>
    <div class="row mt-3 mb-5">
      <div class="col-lg-4 offset-lg-4">
        <%= f.submit "新規登録", class: 'btn btn-success btn-block' %>
        <div class="link mt-4 text-center">
          <span style="font-size:15px;">
            アカウントをお持ちの場合、ログインは<%= link_to "こちら", new_customer_session_path %>から
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>