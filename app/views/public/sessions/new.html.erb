<div class="container">
  <div class=="row">
    <div class="col-md-4 offset-4 customer-login">
      <h4 class="text-center">Order Eats</h4>
        <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="field">
          <h5 class="mt-5">メールアドレス</h5>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "aaa@gmail.com", size: 40, class: "mb-3" %>
        </div>
        <div class="field">
          <h5>パスワード</h5>
          <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード(6文字以上)", size: 40, class: "mb-5" %>
        </div>
        <div class="action">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
        <% end %>
        <div class="link mt-4 ml-4">
          <span style="font-size:14px;">
            アカウントをお持ちでない場合、登録は<%= link_to "こちら", new_customer_registration_path %>から
          </span>
        </div>
    </div>
  </div>
</div>
